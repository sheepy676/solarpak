// All paths relative to the kv file
solarpak // required
{
	// Sets the name of the vpk. add _dir to the end if singlevpk isn't 1
	$name "addon"
	// Pack files into 1 vpk
	// Warns if vpk doesn't have _dir at the end
	$singlevpk 1
	// Sets the vpk version, default 1 acceptable values are 1 or 2
	$version 1

	// $pack supports both directories and regular files
	$pack "materials" 
	$pack "maps"
	$pack "models"
	$pack "scripts"
	$pack "resource"
	$pack "addonimage.jpeg"
	$pack "addoninfo.txt"
}